        <script>
            var story = 0;
            var name;
            questionTime = false;
            function continueStory(){
                if(questionTime == true){
                    console.log("Answer the question!");
                }else{
                    story++;
                    nextPhase();
                }
            }
            function nextPhase(){
                if(story == 1){
                    document.getElementById("show1").style.display = "block";
                    document.getElementById("bob").innerHTML = "üôÑ";
                }else if(story == 2){
                    document.getElementById("show2").style.display = "block";
                    document.getElementById("bob").innerHTML = "üòâ";
                }else if(story == 3){
                    document.getElementById("show3").style.display = "block";                   document.getElementById("bob").innerHTML = "üòã";
                }else if(story == 4){
                    document.getElementById("show4").style.display = "block";                   document.getElementById("bob").innerHTML = "ü§î";
                }else if(story == 5){
                    document.getElementById("show5").style.display = "block";                 document.getElementById("bob").innerHTML = "üòÉ";
                    document.getElementById("show6").style.display = "block";  
                    document.getElementById("show7").style.display = "block"; document.getElementById("show8").style.display = "block"; 
                    questionTime = true;
                }else if(story == 6){
                    document.getElementById("show10").style.display = "block";                   document.getElementById("bob").innerHTML = "üòí";
                    document.getElementById("wrapper").scrollTop += 100;
                }else if(story == 7){
                    document.getElementById("show11").style.display = "block";                   document.getElementById("bob").innerHTML = "ü•±";
                    document.getElementById("wrapper").scrollTop += 100;
                }else if(story == 8){
                    questionTime = true;
                    document.getElementById("show12").style.display = "block";                   document.getElementById("bob").innerHTML = "üôÉ";
                    document.getElementById("wrapper").scrollTop += 100;
                    setTimeout(function(){
                        questionTime = false;
                        name = prompt('Whats your name');
                        if(name == ""){
                            name = prompt('Your real name');
                        }
                    }, 1000);
                    setTimeout(function(){
                        document.getElementById("show13").style.display = "block";  
                        document.getElementById("show13").innerHTML = "Alright " + name + ", lets start the real quiz";
                        document.getElementById("bob").innerHTML = "üòâ";
                        document.getElementById("wrapper").scrollTop += 100;
                }, 1200);
                }else if(story == 9){
                    document.getElementById("show14").style.display = "block";  
                    document.getElementById("bob").innerHTML = "üòè";
                    document.getElementById("wrapper").scrollTop += 100;
                }else if(story == 10){
                    document.getElementById("show15").style.display = "block";  
                    document.getElementById("bob").innerHTML = "üòÆ";
                    document.getElementById("show16").style.display = "block"; 
                    document.getElementById("wrapper").scrollTop += 200;
                }else if(story == 11){
                    document.getElementById("show17").style.display = "block";  
                    document.getElementById("bob").innerHTML = "üòÅ";
                    document.getElementById("wrapper").scrollTop += 100;
                }else{
                    console.log("Read the instructions");
                }
            }
            function hideDiv(){
                document.getElementById("stacked").style.display = "none";
                document.getElementById("show9").style.display = "block";
                document.getElementById("bob").innerHTML = "ü§î";
                setTimeout(function(){
                    questionTime = false;
                }, 500);
            }
